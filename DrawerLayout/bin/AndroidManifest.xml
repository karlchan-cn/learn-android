<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.duowan.android.test.drawerlayout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
<!-- android:theme="@style/Theme.AppCompat.Light" -->
<!-- android:theme="@style/Theme.AppCompat.Light.DarkActionBar" --> 
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.com.duowan.android.test.drawerlayout.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.com.duowan.android.test.drawerlayout.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="cn.com.duowan.android.test.drawerlayout.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.com.duowan.android.test.drawerlayout.MainActivity" />
        </activity>
    </application>

</manifest>